{
	"$schema": "https://railway.app/railway.schema.json",
	"build": {
		"builder": "NIXPACKS",
		"buildCommand": "yarn run build",
		"nixpacksPlan": {
			"phases": {
				"setup": {
					"nixPkgs": ["nodejs_20"]
				}
			}
		}
	},
	"deploy": {
		"startCommand": "node build",
		"healthcheckPath": "/",
		"healthcheckTimeout": 100,
		"restartPolicyType": "NEVER"
	}
}
